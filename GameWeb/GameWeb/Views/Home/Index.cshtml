@model IEnumerable<GameWeb.Entities.Games>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="bg-light p-5 rounded shadow">
        <h1 class="mb-4">Ranking Gier</h1>
        <div class="row">
            @{
                int position = 1;

                foreach (var game in Model)
                {
                
                    <div class="col-md-12 mb-4">
                        <div class="card">
                            <div class="bg-light p-5 rounded shadow">
                                <div class="row no-gutters">
                                    <div class="col-md-1 d-flex align-items-center justify-content-center">
                                        <h3 class="card-title">@position#</h3>
                                    </div>
                                    <div class="col-md-3">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="GameDetails" asp-action="Index" asp-route-id="@game.Id">
                                            <img src="@Url.Content(game.MainImagePath)" class="card-img" alt="Game Image" style="height: 200px; width: 150px; object-fit: cover;">
                                        </a>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="row justify-content-between h-100  align-items-center">
                                            <div class="col-md-5">
                                                <h4 class="card-text text-center">
                                                    <a class="nav-link text-dark" asp-area="" asp-controller="GameDetails" asp-action="Index" asp-route-id="@game.Id">
                                                        @game.Title
                                                    </a>
                                                </h4>
                                            </div>
                                            <div class="col-md-2">
                                                <div class="d-flex flex-column text-right">
                                                    <h5 class="card-text">Ocena: </h5><h1>@Math.Round(game.Rating,2)</h1>
                                                    <p class="card-text">Ilość ocen: @game.NumberOfVotes</p>
                                                </div>
                                            </div>
                                            <div class="col-md-2">
                                                <a class="nav-link text-primary" asp-area="" asp-controller="GameDetails" asp-action="Index" asp-route-id="@game.Id">
                                                    <i class="bi bi-arrow-right-circle" style="font-size: 4em;"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    position += 1;
                }
            }
        </div>
    </div>
</div>


