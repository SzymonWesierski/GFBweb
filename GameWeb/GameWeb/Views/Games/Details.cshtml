@model GameWeb.Entities.Games

@{
    ViewData["Title"] = "Details Game";
}
<div class="container">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Game Details</h2>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Title" class="control-label"></label>
            <input asp-for="@Model.Title" class="form-control" disabled/>
        </div>
        <div class="mb-3">
            Image:
            <div>
                <img src="@Url.Content(@Model.MainImagePath)" class="card-img" alt="Game Image" style="width: 30%; height: auto;">
            </div>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Created" class="control-label"></label>
            <input asp-for="@Model.Created" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Description" class="control-label"></label>
            <textarea asp-for="@Model.Description" class="form-control" disabled ></textarea>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.ReleaseDate" class="control-label"></label>
            <input asp-for="@Model.ReleaseDate" class="form-control" disabled />
        </div>
        <div class="mb-3">
            @{
                string categories = "";
                @foreach (var category in Model.CategoryList)
                {
                    categories += category.CategoryName + ", ";
                }
                categories = categories.Substring(0, categories.Length - 2);
            }
            Categories:
            <div class="form-control" disabled>
                @categories
            </div>  
        </div>
        <div class="mb-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary mx-2">
                Edit <i class="bi bi-pencil-square"></i>
            </a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>

