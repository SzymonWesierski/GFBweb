@model GameWeb.Entities.Games

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="border p-3 mt-4">

        <div class="mb-3">
            <div>
                <img src="@Url.Content(@Model.MainImagePath)" class="card-img" alt="Game Image" style="width: 30%; height: auto;">
            </div>
        </div>
        
        <div class="mb-3">
            <h3>Are you sure you want to delete @Html.DisplayFor(model => model.Title) ?</h3>
        </div>
        <div class="mb-3">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />&nbsp;&nbsp;
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>
